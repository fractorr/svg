    		options: [
    			{label: '200', value: '200'},
    			{label: '150', value: '150'},
    			{label: '144', value: '144'},
    			{label: '108', value: '108'},
    			{label:  '72', value:  '72'}, 
    			{label: '300', value: '300'},
    		]
    	},
    	
    	{
    		heading: "Format",
    		info: "Output Format (pdf, png, jpg, etc)",
    		type: "select",
    		options: [
    			{label: 'PNG', value: 'png'},
    			{label: 'PDF', value: 'pdf'}, 
    			{label: 'JPG', value: 'jpg'},
    			{label: 'GIF', value: 'gif'},
    		]
    	},
    	
    	{
    		heading: "Source Field",
