{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("fractorr\\svg\\assetbundles\\svg\\SvgAsset") %}

{{ forms.textField({
    label: 'Entry Type Handle',
    instructions: 'Handle of the entry type to process (EG: product)',
    id: 'entryTypeHandle',
    name: 'entryTypeHandle',
    value: settings['entryTypeHandle']})
}}

{{ forms.editableTableField({
    label: 'File Paths',
    instructions: 'File conversion details',
    id: 'pathFiles',
    name: 'pathFiles',
    rows: settings['pathFiles'],
    cols: [
    	{
    		heading: "Title",
